<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGroupPage">

    <TextView
        android:id = "@+id/add_group_page_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="새 그룹 만들기"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id ="@+id/add_group_page_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text ="그룹 이름"
        android:textSize = "18dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@id/add_group_page_text1"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id = "@+id/input_group_name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:singleLine="true"
        android:layout_marginTop="20dp"
        android:imeOptions="actionDone"
        app:layout_constraintTop_toBottomOf="@id/add_group_page_text2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id ="@+id/add_group_page_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text ="그룹 사진"
        android:textSize = "18dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@id/input_group_name"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageButton
        android:id = "@+id/select_group_img"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/add_group_page_text3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id = "@+id/btnCreateGroup"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text ="생  성  하  기"
        android:textSize ="17dp"
        android:textStyle="bold"
        android:background="@color/dutchpengBlue"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>